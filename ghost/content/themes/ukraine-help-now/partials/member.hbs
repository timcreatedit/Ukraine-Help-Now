<div class="gh-member {{post_class}}">
    {{#if feature_image}}
    <img class="gh-member-image" srcset="{{img_url feature_image size=" s"}} 300w, {{img_url feature_image size="m" }}
        600w, {{img_url feature_image size="l" }} 1000w, {{img_url feature_image size="xl" }} 2000w"
        sizes="(max-width: 1000px) 400px, 700px" src="{{img_url feature_image size=" m"}}"
        alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" />
    {{/if}}
    <div class="gh-member-content">
        {{content}}
    </div>
</div>